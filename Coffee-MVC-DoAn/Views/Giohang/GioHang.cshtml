
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-md-12">
    <div class="order-summary clearfix">
        <div class="section-title">
            <h3 class="title">Order Review</h3>
        </div>
        <table class="shopping-cart-table table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th></th>
                    <th class="text-center">Giá</th>
                    <th class="text-center">Số lượng</th>
                    <th class="text-center">Tổng cộng</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td class="thumb"><img src="~/Hinhsanpham//@item.sAnhbia" alt=""></td>
                        <td class="details" >
                            <a href="#">@item.sTenCF</a>                        
                        </td>
                        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMaCF }))
                        {
                        <td class="price text-center"><strong>@String.Format("{0:0,0}", item.dDongia)</strong></td>
                        <td class="qty text-center"><input class="input" type="number" min="1" name="txtSoluong" value="@item.iSoluong"></td>
                        <td class="total text-center"><strong class="primary-color">@String.Format("{0:0,0}", item.dThanhtien)</strong></td>
                        <td class="text-right"><button class="main-btn icon-btn" style="width:70%"><a href="@Url.Action("Details", "Coffee", new { id = item.iMaCF })">Chi tiết</a></button></td>
                        <td class="text-right"><button class="main-btn icon-btn" style="width:80%">@Html.ActionLink("Xóa", "XoaGiohang", new { @iMasp = item.iMaCF })</button></td>
                        @*<td><input type="submit" value="Cập nhật"/></td>*@
                        <td class="text-right"><button class="main-btn icon-btn" style="width:80%">Cập nhật</button></td>
                        }
                    </tr>
                </tbody>
            }
         
            <tfoot>
                <tr>
                    <th class="empty" colspan="3"></th>
                    <th>Số lượng SP: </th>
                    <th colspan="2" class="sub-total">@ViewBag.Tongsoluong</th>
                </tr>
                <tr>
                    <th class="empty" colspan="3"></th>
                    <th>Tổng cộng: </th>
                    <th colspan="2" class="total">@String.Format("{0:0,0}", ViewBag.Tongtien) đ</th>
                </tr>
                <tr>
                    <th class="empty" colspan="3"></th>
                    <th>Xóa giỏ hàng: </th>
                    <th colspan="2" class="total">@Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")</th>
                </tr>
            </tfoot>
        </table>
        <div class="pull-right">
            <button class="primary-btn">Place Order</button>
        </div>
    </div>

</div>